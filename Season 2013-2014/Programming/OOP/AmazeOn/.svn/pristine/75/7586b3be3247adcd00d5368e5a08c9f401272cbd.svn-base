using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;

namespace AmazeOn
{
    //Must be constructed as Singleton - there should be only one inicialized Card.
    public class Cart : ILogable
    {
        //Fields
        private static Cart instance;
        private List<Item> itemsInCart;

        //Properties
        public Cart Instance
        {
            get
            {
                return instance;
            }
            private set
            {
                if (instance == null)
                {
                    instance = new Cart();
                    instance.itemsInCart = new List<Item>();
                }
            }
        }

        public List<Item> ItemsInCart
        {
            get
            {
                return itemsInCart;
            }
            private set
            {
                this.itemsInCart = value;
            }
        }

        //Methods
        public static Cart InitializeCart()
        {
            if (instance == null)
            {
                instance = new Cart();
                instance.itemsInCart = new List<Item>();
            }

            return instance;
        }

        void EmptyCart()
        {
            this.itemsInCart = new List<Item>();
        }

        void AddToCart(Item item)
        {
            this.itemsInCart.Add(item);
        }

        public void AddToLog()
        {
            //TODO create new Order() and add it t the log.txt
            throw new NotImplementedException();
        }

        //Constructors
        private Cart()
        {
        }
    }
}
